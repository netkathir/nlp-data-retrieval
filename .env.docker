# Docker Environment Configuration
# Copy this to .env before building Docker image

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DB_HOST=your_postgresql_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Pinecone Configuration (Cloud Vector Storage)
USE_PINECONE=True
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=warehouse-ai-embeddings

# Storage Mode (recommended: pinecone_only for Docker)
# - "pinecone_only" = Cloud-only storage (no local cache files, perfect for Docker)
# - "local_only" = Local cache only (not recommended for Docker - data lost on restart)
# - "hybrid" = Both (requires persistent volumes in Docker)
STORAGE_MODE=pinecone_only

# Flask Configuration
FLASK_ENV=production
