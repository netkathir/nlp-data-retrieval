# ============================================================================
# Warehouse AI Tool - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# 
# IMPORTANT: Never commit .env to version control!
# ============================================================================

# OpenAI API Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-api-key-here

# OpenAI Custom Endpoint (OPTIONAL)
# Leave empty to use default OpenAI endpoint
OPENAI_API_BASE=

# PostgreSQL Database Configuration (REQUIRED)
# Cloud-hosted (e.g., Render, AWS RDS) or local PostgreSQL
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password
POSTGRES_DATABASE=transport_vendor_db

# Flask API Configuration
# 0.0.0.0 allows external connections, 127.0.0.1 for local only
API_HOST=0.0.0.0
API_PORT=5001

# API_DEBUG: Set to True for development, False for production
# IMPORTANT: Must be False in production for security!
API_DEBUG=False

# Data Configuration (OPTIONAL)
# Paths for data files and caching
DATA_PATH=data/vendors_30.csv
EMBEDDINGS_CACHE_PATH=data/embeddings/cache_postgresql.pkl
